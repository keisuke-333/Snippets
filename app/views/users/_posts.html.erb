<div class="count">
  <%= @posts.total_count %>件
</div>
<div class="list">
  <% @posts.each do |post| %>
      <%= link_to post, class: "item" do  %>
        <div class="area-image">
          <object><%= link_to (image_tag post.user.image.url, class: "icon"), user_path(post.user_id) %></object>
        </div>
        <div class="area-body">
          <div class="title"><%= language_icon(post.language) %><%= post.title.truncate(Post::TRUNCATE_TITLE_LENGTH) %></div>
          <div class="details">
            <span class="date-time"><%= icon('fas', 'paper-plane') %><%= time_ago_in_words post.created_at %>前</span>
            <span class="view"><%= icon('far', 'eye') %><%= post.impressions_count %></span>
            <span class="favorite"><%= icon('far', 'thumbs-up') %><%= post.favorites.size %></span>
          </div>
        </div>
      <% end %>
  <% end %>
</div>
<%= paginate @posts, remote: true %>
