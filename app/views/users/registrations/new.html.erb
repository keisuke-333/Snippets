<div class="user-auth">
  <h2 class="title">Snippets へようこそ！</h2>
  <div class="form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザ名", required: true, maxlength: '10' %>
      </div>

      <div class="field">
        <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", required: true, maxlength: '100' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", required: true, minlength: @minimum_password_length, maxlength: '30' %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認用)" %>
      </div>

      <div class="submit-field">
        <%= f.submit t('.sign_up'), class: "btn" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>