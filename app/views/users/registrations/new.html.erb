<div class="user-auth">
  <h2 class="title">Snippetsへようこそ！</h2>
  <div class="form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名", required: true, maxlength: '10' %>
        <% if resource.errors.include?(:name) %>
          <span class="error-messages"><%= resource.errors.full_messages_for(:name).first %></span>
        <% end %>
      </div>

      <div class="field">
        <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", required: true, maxlength: '100' %>
        <% if resource.errors.include?(:email) %>
          <span class="error-messages"><%= resource.errors.full_messages_for(:email).first %></span>
        <% end %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", required: true, minlength: @minimum_password_length, maxlength: '30' %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認用)" %>
        <% if resource.errors.include?(:password_confirmation) %>
          <span class="error-messages"><%= resource.errors.full_messages_for(:password_confirmation).first %></span>
        <% end %>
      </div>

      <div class="submit-field">
        <%= f.submit t('.sign_up'), class: "btn" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>