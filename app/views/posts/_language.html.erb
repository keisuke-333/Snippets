      <%= icon('fab', 'js', class: 'fa-fw') %>
    <% end %>
  </div>
  <div class="link">
    <% if params[:q].present? && params[:q][:language_eq] == "Ruby" %>
      <%= icon('fas', 'check') %>
    <% end %>
    <%= link_to posts_path(@q, :'q[language_eq' => "Ruby"), class: "ruby" do %>
      <%= icon('fas', 'gem', class: 'fa-fw') %>
    <% end %>
  </div>
</div>