<div class="select-language">
  <div class="link">
    <% if params[:q].present? && params[:q][:language_eq] == "HTML" %>
      <%= icon('fas', 'check') %>
    <% end %>
    <%= link_to posts_path(@q, :'q[language_eq' => "HTML"), class: "html" do %>
      <%= icon('fab', 'html5', class: 'fa-fw') %>
    <% end %>
  </div>
  <div class="link">
    <% if params[:q].present? && params[:q][:language_eq] == "CSS" %>
