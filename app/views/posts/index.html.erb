<div class="container-center">

  <h1 class="posts__title">一覧画面</h1>

  <div class="posts__list">
    <% @posts.each do |post| %>
      <div class="posts__list--item">
        <%= link_to (image_tag post.user.image.url, class: "icon"), user_path(post.user_id) %>
        <div class="body">
          <%= link_to post.title, post, class: "title" %>
        </div>
      </div>
    <% end %>
  </div>

</div>