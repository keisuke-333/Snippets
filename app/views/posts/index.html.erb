<div class="posts-index">

  <div class="container">

    <div class="container__center">
      <div class="list">
        <% @posts.each do |post| %>
          <div class="item">
            <div class="area-image">
              <%= link_to (image_tag post.user.image.url, class: "icon"), user_path(post.user_id) %>
            </div>
            <div class="area-body">
              <div class="title">
                <%= link_to post.title.truncate(50), post, class: "link" %>
              </div>
              <div class="details">
                <span class="date-time"><%= icon('fas', 'paper-plane') %><%= time_ago_in_words post.created_at %>Ââç</span>
                <span class="view"><%= icon('far', 'eye') %><%= post.impressionist_count %></span>
                <span class="favorite"><%= icon('far', 'thumbs-up') %><%= post.favorites.count %></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="container__right">
      <div class="switch">
        <div class="link">
          <%= link_to posts_path do %>
            <%= icon('fas', 'history', class: 'fa-fw') %>
          <% end %>
        </div>
        <div class="link">
          <%= link_to posts_path(sort: "pv") do %>
            <%= icon('far', 'eye', class: 'fa-fw') %>
          <% end %>
        </div>
        <div class="link">
          <%= link_to posts_path(sort: "favorite") do %>
            <%= icon('far', 'thumbs-up', class: 'fa-fw') %>
          <% end %>
        </div>
      </div>
    </div>

  </div>

</div>